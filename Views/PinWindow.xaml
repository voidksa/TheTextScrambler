<Window x:Class="TextScrambler.Views.PinWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter PIN" Height="320" Width="360"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Icon="/Resources/AppIcon.png"
        Topmost="True">
    
    <Border CornerRadius="12" Background="{DynamicResource WindowBackground}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="10" Opacity="0.4" Color="Black" Direction="270"/>
        </Border.Effect>
        
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,24" HorizontalAlignment="Center">
                <Border Width="40" Height="40" CornerRadius="20" Background="{DynamicResource AccentColor}" Margin="0,0,0,12" HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ”’" FontSize="18" Foreground="{DynamicResource AccentForeground}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <TextBlock Text="Authentication Required" FontWeight="SemiBold" FontSize="16" Foreground="{DynamicResource TextForeground}" HorizontalAlignment="Center"/>
                <TextBlock Text="Please enter your PIN to continue" Foreground="{DynamicResource SecondaryText}" FontSize="13" HorizontalAlignment="Center" Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Input -->
            <PasswordBox x:Name="TxtPin" Grid.Row="1" Height="42" 
                         Style="{StaticResource ModernPasswordBoxStyle}"
                         HorizontalContentAlignment="Center" FontSize="18" Margin="0,0,0,24"/>

            <!-- Buttons -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0" x:Name="BtnCancel" Content="Cancel" 
                        Click="BtnCancel_Click" Style="{StaticResource ModernButtonStyle}" Height="36"/>
                
                <Button Grid.Column="2" x:Name="BtnOk" Content="Confirm" IsDefault="True"
                        Click="BtnOk_Click" Style="{StaticResource AccentButtonStyle}" Height="36"/>
            </Grid>
        </Grid>
    </Border>
</Window>
