<Window x:Class="TextScrambler.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" SizeToContent="Height" Width="700"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Icon="/Resources/AppIcon.png"
        Background="{DynamicResource WindowBackground}" Foreground="{DynamicResource TextForeground}">
    
    <Window.Resources>
        <!-- Fluent Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource ControlBackground}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="12" ShadowDepth="4" Direction="270" Color="Black" Opacity="0.03"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Section Title Style -->
        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Foreground" Value="{DynamicResource HeaderForeground}"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
    </Window.Resources>
    
    <Border Padding="32">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="Auto"/> <!-- Content -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,32">
                <Border Width="48" Height="48" CornerRadius="12" Background="{DynamicResource AccentColor}" Margin="0,0,16,0">
                    <TextBlock Text="âš™" FontSize="24" Foreground="{DynamicResource AccentForeground}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Settings" FontSize="26" FontWeight="SemiBold" Foreground="{DynamicResource TextForeground}"/>
                    <TextBlock Text="Manage your preferences" FontSize="14" Foreground="{DynamicResource SecondaryText}" Margin="0,2,0,0"/>
                </StackPanel>
            </StackPanel>

            <!-- Content Grid -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column -->
                <StackPanel Grid.Column="0">
                    <!-- Appearance Card -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Appearance" Style="{StaticResource SectionTitleStyle}"/>
                            <StackPanel>
                                <RadioButton x:Name="RbThemeAuto" Content="Auto (Sync with System)" Margin="0,0,0,12" IsChecked="True"/>
                                <RadioButton x:Name="RbThemeDark" Content="Dark Mode" Margin="0,0,0,12"/>
                                <RadioButton x:Name="RbThemeLight" Content="Light Mode"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- System Card -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="System" Style="{StaticResource SectionTitleStyle}"/>
                            <CheckBox x:Name="CbStartup" Content="Launch on Windows Startup"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Right Column -->
                <StackPanel Grid.Column="2">
                    <!-- Security Card -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Security" Style="{StaticResource SectionTitleStyle}"/>
                            <TextBlock Text="Default PIN" Foreground="{DynamicResource SecondaryText}" Margin="0,0,0,8" FontSize="13"/>
                            <PasswordBox x:Name="TxtDefaultPin" Height="36" Style="{StaticResource ModernPasswordBoxStyle}"/>
                            <TextBlock Text="If set, you won't be prompted for a PIN." Foreground="{DynamicResource SecondaryText}" Margin="0,8,0,0" FontSize="12" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- About Card -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="About" Style="{StaticResource SectionTitleStyle}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <TextBlock Text="The Text Scrambler" FontWeight="Bold" FontSize="15" Foreground="{DynamicResource TextForeground}"/>
                                <Border Background="{DynamicResource AccentColor}" CornerRadius="4" Padding="6,2" Margin="10,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="v1.0.0" Foreground="{DynamicResource AccentForeground}" FontSize="11" FontWeight="Bold"/>
                                </Border>
                            </StackPanel>
                            
                            <TextBlock Text="Secure encryption made simple." Foreground="{DynamicResource SecondaryText}" TextWrapping="Wrap" Margin="0,0,0,16" FontSize="13"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <Button Grid.Column="0" Content="GitHub" Style="{StaticResource ModernButtonStyle}" 
                                        Click="BtnGithub_Click" Tag="https://github.com/voidksa/TheTextScrambler"
                                        Padding="16,6" FontSize="13"/>
                                
                                <Button Grid.Column="2" Content="Done" Style="{StaticResource AccentButtonStyle}" 
                                        Click="BtnClose_Click" Width="80" Height="32"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
